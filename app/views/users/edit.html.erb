<div class="container py-3">
  <h2>プロフィール編集</h2>
  <%= form_with model:@user, local:true do |f| %>
    <table class="table table-borderless">
      <tr>
        <td>名前</td>
        <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></td>
      </tr>
      <tr>
        <td>プロフィール画像</td>
        <td><%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "logo.jpg"%></td>
        <td><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "変更を保存" %></td>
      </tr>
    </table>
  <% end %>
</div>