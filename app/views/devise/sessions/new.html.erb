<div class="container py-3">
  <h3><i class="fas fa-sign-in-alt"></i> ログイン</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row my-3">
      <div class="col-md-8">
        <%= flash[:alert] %>
        <table class="table table-borderless my-5">
          <tr>
            <td>Eメール</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td>パスワード</td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                ログインの状態を保持する
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class:"btn btn-primary" %></td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>