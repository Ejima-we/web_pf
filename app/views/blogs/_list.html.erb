<div class="container py-5">
  <% blogs.each do |blog| %>
    <div class="card mx-auto mt-4 shadow-lg" style="max-width: 500px">
      <%= link_to blog_path(blog.id) do %>
        <%= attachment_image_tag blog, :image, fallback: "no_image.jpeg",class:"card-img-top" %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag blog.user, :profile_image,  size: "50x50", fallback: "logo.jpeg", class:"mt-2 rounded-circle" %>
          </div>
          <div class="col-10">
            <h4 class="card-title">
              <%= link_to blog_path(blog.id) do %>
                <%= blog.title %>
              <% end %>
            </h4>
            <p class="card-text">
              <%= blog.user.name %> | <%= link_to "#{blog.comments.count} コメント", blog_path(blog.id) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate blogs %>
</div>