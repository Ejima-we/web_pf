<% @blogs.each do |blog| %>
  <div>
    <%= link_to blog_path(blog.id) do %>
      <%= attachment_image_tag blog, :image %>
    <% end %>
    <p>投稿ユーザー画像：<%= image_tag('logo.jpg') %></p>
    <p>タイトル：<%= blog.title %></p>
    <p>本文：<%= blog.body %></p>
    <p>ユーザーネーム：<%= blog.user.name %></p>
    <p><%= link_to "#{blog.comments.count} コメント", blog_path(blog.id) %></p>
  </div>
<% end %>
<%= paginate @blogs %>